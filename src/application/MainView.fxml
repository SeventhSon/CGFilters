<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet application.css?>

<BorderPane fx:id="root" fx:controller="application.MainController"
	minHeight="269.25" minWidth="275.0" xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/2.2">
	<center>
		<ImageView fx:id="imageDisplay" pickOnBounds="true"
			preserveRatio="true" />
	</center>
	<top>
		<MenuBar fx:id="menu" maxHeight="25">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" text="Load image"
							onAction="#loadImage" />
						<MenuItem mnemonicParsing="false" text="Save" onAction="#save"/>
						<MenuItem mnemonicParsing="false" text="Save As" onAction="#saveAs"/>
						<MenuItem mnemonicParsing="false" text="Close" onAction="#close" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem disable="true" onAction="#undo" mnemonicParsing="false" text="Undo" />
						<MenuItem disable="true" onAction="#redo" mnemonicParsing="false" text="Redo" />
					</items>
				</Menu>
				<Menu fx:id="FiltersMenu" mnemonicParsing="false" disable="true"
					text="Filters">
					<items>
						<Menu mnemonicParsing="false" text="Functional">
							<items>
								<MenuItem mnemonicParsing="false" text="Contrast"
									onAction="#contrast" />
								<MenuItem mnemonicParsing="false" text="Brightness"
									onAction="#brightness" />
								<MenuItem mnemonicParsing="false" text="Editor" onAction="#editor" />
								<MenuItem mnemonicParsing="false" text="Inversion"
									onAction="#inversion" />
							</items>
						</Menu>
						<Menu disable="false" mnemonicParsing="false" text="Convolution">
							<items>
								<MenuItem mnemonicParsing="false" text="Blur" onAction="#blur"/>
								<MenuItem mnemonicParsing="false" text="Gaussian Blur" onAction="#gauss"/>
								<MenuItem mnemonicParsing="false" text="Sharpen" onAction="#sharpen"/>
								<MenuItem mnemonicParsing="false" text="Edge Detect" onAction="#edge"/>
								<MenuItem mnemonicParsing="false" text="Emboss" onAction="#emboss"/>
							</items>
						</Menu>
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
